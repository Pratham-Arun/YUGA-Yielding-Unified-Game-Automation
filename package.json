{
  "name": "yuga-engine",
  "version": "1.0.0",
  "description": "YUGA Engine - Yielding Unified Game Automation",
  "homepage": "./",
  "author": "YUGA Engine Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run web\" \"wait-on http://localhost:3000 && electron .\"",
    "web": "http-server . -p 3000 -c-1",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "dependencies": {
    "ajv": "^6.12.6",
    "electron-squirrel-startup": "^1.0.0",
    "three": "^0.158.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "http-server": "^14.1.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.yuga.engine",
    "productName": "YUGA Engine",
    "files": [
      "electron/**/*",
      "index.html",
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
