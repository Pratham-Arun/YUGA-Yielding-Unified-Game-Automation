{
  "name": "yuga-engine",
  "version": "2.0.0",
  "description": "YUGA Engine - Yielding Unified Game Automation with AI",
  "type": "module",
  "main": "src-tauri/src/main.rs",
  "author": "YUGA Engine Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run api\" \"npm run client\"",
    "dev:tauri": "concurrently \"npm run api\" \"tauri dev\"",
    "client": "vite",
    "api": "node backend/server.js",
    "tauri": "tauri",
    "build": "vite build",
    "build:tauri": "tauri build",
    "build:win": "tauri build --target x86_64-pc-windows-msvc",
    "build:mac": "tauri build --target x86_64-apple-darwin",
    "build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "build:all": "tauri build",
    "preview": "vite preview",
    "start": "npm run dev"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@google/generative-ai": "^0.21.0",
    "@monaco-editor/react": "^4.6.0",
    "@tauri-apps/api": "^2.9.0",
    "ajv": "^6.12.6",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "langchain": "^0.3.7",
    "lucide-react": "^0.468.0",
    "openai": "^4.77.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "three": "^0.158.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  }
}
