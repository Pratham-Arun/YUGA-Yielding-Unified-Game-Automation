{
  "name": "yuga-engine",
  "version": "2.0.0",
  "description": "YUGA Engine - Yielding Unified Game Automation with AI",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "YUGA Engine Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run api\" \"npm run client\"",
    "dev:electron": "concurrently \"npm run api\" \"npm run client\" \"npm run electron:dev\"",
    "client": "vite",
    "api": "node backend/server.js",
    "electron:dev": "wait-on http-get://localhost:3000 http-get://localhost:3001 http-get://localhost:3002 && cross-env NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder",
    "build": "vite build",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:all": "vite build && electron-builder -mwl",
    "preview": "vite preview",
    "start": "npm run dev"
  },
  "build": {
    "appId": "com.yugaengine.app",
    "productName": "YUGA Engine",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/yuga-logo.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/yuga-logo.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/yuga-logo.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@google/generative-ai": "^0.21.0",
    "@monaco-editor/react": "^4.6.0",
    "ajv": "^6.12.6",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "langchain": "^0.3.7",
    "lucide-react": "^0.468.0",
    "openai": "^4.77.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "three": "^0.158.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7",
    "wait-on": "^9.0.1"
  }
}
